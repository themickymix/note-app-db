{
  "compilerOptions": {
    "module": "NodeNext", // Allows ES module syntax
    "target": "ES6", // Use ES6 or higher
    "moduleResolution": "nodenext", // Use Node.js module resolution
    "esModuleInterop": true, // Enable default imports
    "skipLibCheck": true, // Skip checking libraries (optional)
    "strict": true, // Enable strict mode (optional)
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"], // Include your TypeScript files here
  "exclude": ["node_modules"], // Exclude node_modules
  "typeRoots": ["./node_modules/@types", "./types"]
}
